<h1>Listing line_items</h1>

<table>
  <tr>
    <th>Activity</th>
    <th>User</th>
    <th>Status</th>
    <th>Ship address</th>
    <th>Ship date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.activity %></td>
    <td><%= line_item.user %></td>
    <td><%= line_item.status %></td>
    <td><%= line_item.ship_address %></td>
    <td><%= line_item.ship_date %></td>
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

