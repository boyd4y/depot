<h1>Listing activities</h1>

<table>
<% @activities.each do |activity| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td>
      <%= image_tag(activity.imageurl, class: 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
        <dt><%= activity.title %></dt>
        <dd><%= truncate(strip_tags(activity.description),
               length: 80) %></dd>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Show', activity %><br/>
      <%= link_to 'Edit', edit_activity_path(activity) %><br/>
      <%= link_to 'Destroy', activity, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

